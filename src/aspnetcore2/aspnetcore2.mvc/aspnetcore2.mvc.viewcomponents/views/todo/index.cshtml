@model IEnumerable<TodoItem>
@{ ViewData["Title"] = "Index"; }

<h2>Todo Starter</h2>

<table>
    <thead>
        <tr>@Html.DisplayNameFor(m => m.IsDone)</tr>
        <tr>@Html.DisplayNameFor(m => m.Priority)</tr>
        <tr>@Html.DisplayNameFor(m => m.Name)</tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.IsDone)</td>
                <td>@Html.DisplayFor(m => item.Priority)</td>
                <td>@Html.DisplayFor(m => item.Name)</td>
            </tr>
        }
    </tbody>
</table>

